<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbs.dao.MusicDao">
<!-- 插入歌曲 -->
	<insert id="addMusicSong" parameterType="com.bbs.pojo.Music">
		insert into music(musicName,singer,album,musicOtherName,musicImgName) 
		values(#{musicName},#{singer},#{album},#{musicOtherName},#{musicImgName})
	</insert>
	
<!-- 	<delete id="disCollectPost" parameterType="com.bbs.pojo.Music"> -->
<!-- 		delete from collect where userID=#{userID} and mainPostID=#{mainPostID} -->
<!-- 	</delete> -->
<!-- 查询所有歌曲	 -->
	<select id="getMusicList"  resultType="com.bbs.pojo.Music">
		select * from music
	</select>

<!-- 查询单个曲子信息 -->
	<select id="getOneMusic" parameterType="int" resultType="com.bbs.pojo.Music">
		select * from music where musicID = #{musicID}
	</select>
	
</mapper>