<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbs.dao.CollectDao">

	<insert id="collectPost" parameterType="com.bbs.pojo.Collect">
		insert into collect(userID,mainPostID) values(#{userID},#{mainPostID})
	</insert>
	
	<delete id="disCollectPost" parameterType="com.bbs.pojo.Collect">
		delete from collect where userID=#{userID} and mainPostID=#{mainPostID}
	</delete>
	
	<select id="selectCollectPost" parameterType="com.bbs.pojo.Collect" resultType="com.bbs.pojo.Collect">
		select * from collect where userID=#{userID} and mainPostID=#{mainPostID}
	</select>
	
</mapper>