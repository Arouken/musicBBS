<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bbs.dao.ReportMainDao">

	<insert id="addReportMain" parameterType="com.bbs.pojo.ReportMain">
		insert into report_mp(userID,mainPostID,reportReason,reportMainTime) 
		values(#{userID},#{mainPostID},#{reportReason},#{reportMainTime})
	</insert>
	
		
	<select id="getReportMainList">
		SELECT * FROM main_post 
		WHERE mainPostID IN(
			SELECT mainPostID FROM report_mp 
			WHERE reportIsDeal = 0) 
	</select>


	
